{
  "name": "@partykit/partyflare-root",
  "version": "0.0.0",
  "private": true,
  "description": "PartyKit, for Workers",
  "scripts": {
    "build": "npm run build -w partyflare",
    "check": "concurrently \"npm run check:repo\" \"npm run check:format\" \"npm run check:lint\" \"npm run check:type\" \"npm run check:test\" --kill-others-on-fail",
    "check:format": "prettier . --check --ignore-unknown",
    "check:lint": "eslint \"**/*.[tj]s?(x)\" --max-warnings=0 --report-unused-disable-directives",
    "check:repo": "manypkg check",
    "check:test": "npm run check:test -w partyflare",
    "check:type": "find . -name 'tsconfig.json' -not -path '*/node_modules/*' -print0 | xargs -0 -I {} bash -c 'echo \"tsc --project {}\"; tsc --project {} || exit 255' || exit 1",
    "copy-readme": "cp README.md packages/partyflare/README.md",
    "test": "npm run test -w partyflare",
    "ncu": "bunx npm-check-updates",
    "all": "bun i && bun run build && bun check",
    "postinstall": "sh -c '[ -f package-lock.json ] && echo \"Error: package-lock.json exists\" && exit 1 || exit 0'"
  },
  "keywords": [],
  "author": "Sunil Pai <threepointone@gmail.com>",
  "license": "ISC",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "dependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.3",
    "@cloudflare/vitest-pool-workers": "^0.4.0",
    "@ianvs/prettier-plugin-sort-imports": "^4.2.1",
    "@manypkg/cli": "^0.21.4",
    "@types/bun": "^1.1.3",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "@vitest/runner": "1.5.0",
    "@vitest/snapshot": "1.5.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "eslint": "^8.38.0",
    "eslint-plugin-deprecation": "^2.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.2",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "1.5.0",
    "wrangler": "^3.57.2"
  },
  "trustedDependencies": [
    "core-js",
    "esbuild",
    "workerd"
  ]
}
